//Caddy的events应用配置
//原配置：
{
  "admin": {
    "disabled": true
  },
  "logging": {
    "logs": {
//.........<省略>........
    }
  }
}

//联动执行一个程序配置，原配置修改为如下：
{
  "admin": {
    "disabled": true
  },
  "logging": {
    "logs": {
//.........<省略>........
    },
    "events": { //版本不小于v2.6.0才支持
      "subscriptions": [{
        "events": ["cert_obtained"],
        "handlers": [{
          "handler": "exec",
          "command": "systemctl", //确保Caddy有权运行此命令，即Caddy用户至少为root组权限用户。
          "args": ["restart","v2ray"] //可以调整为其它程序
        }]
      }]
    }
  }
}

//联动执行两个程序配置，原配置修改为如下：
{
  "admin": {
